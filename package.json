{
  "name": "eventflow-service-template",
  "version": "1.0.0",
  "description": "Standard starting point for backend services in the EventFlow ecosystem",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "eventflow",
    "template",
    "kafka",
    "microservice"
  ],
  "author": "Marcio Dias",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.5.0",
    "jiti": "^2.6.1",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.53.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "kafkajs": "^2.2.4",
    "winston": "^3.19.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}
